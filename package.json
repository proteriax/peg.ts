{
  "name": "pegjs-dev",
  "private": true,
  "workspaces": [
    "packages/*",
    "tools/*",
    "test",
    "website"
  ],
  "scripts": {
    "lint": "eslint --ext .ts .",
    "spec": "mocha --reporter progress",
    "benchmark": "node tools/benchmark",
    "build-parser": "pegjs -c src/pegjs.config.js",
    "lebab": "lebab --replace ./packages/pegjs/lib/parser.ts --transform arrow,multi-var,arrow-return,template,obj-shorthand",
    "build-dist": "rollup -c ./tools/bundler/rollup.config.js",
    "build-website": "node website/export",
    "clean": "rimraf public packages/pegjs/dist examples/*.js",
    "impact": "node tools/impact master",
    "build": "node website/export --fresh",
    "test": "nyc mocha",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
  },
  "dependencies": {
    "@futagoza/eslint-config": "13.1.0",
    "@types/node": "14",
    "codecov": "3.7.0",
    "eslint": "7.3.1",
    "mocha": "^8.0.1",
    "nyc": "15.1.0",
    "rimraf": "3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test"
    }
  },
  "engines": {
    "node": ">= 12.0"
  },
  "prettier": {
    "arrowParens": "avoid",
    "tabWidth": 2,
    "printWidth": 90,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/dedent": "^0.7.0",
    "avec-ts": "^1.0.1",
    "babel-eslint": "^10.1.0",
    "husky": "^4.2.5",
    "lebab": "^3.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
